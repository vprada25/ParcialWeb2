{{>profile}}


<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Informacion</h1>
        </div>
        <div class="card-body">
            {{#if date}}
            <ul class="list-group">
                {{#each date}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{date.nombre}}
                    {{date.value}} /
                    <a href="/delete-contact/{{@key}}" class="btn btn-danger">Borrar</a>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p>No hay informacion para mostrar.</p>
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="/save" method="POST">
                <div class="form-group">
                    <input type="text" name="titulo" placeholder="titulo" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="descripcion" placeholder="descripcion" class="form-control">
                </div>
                <div class="form-group">
                    <select id="categoria" class="form-control">
                        <option selected>Elige una...</option>
                        <option>Proyectos</option>
                        <option>Trabajos</option>
                    </select>
                </div>
              
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar
                </button>
            </form>
        </div>
    </div>
</div>




{{>footer}}